{
  "manifest_version": 3,
  "name": "Forsenad Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for enhanced browsing experience",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Forsenad Extension"
  },
  "content_scripts": [
    {
      "matches": ["https://www.sj.se/sok-resa*"],
      "js": ["popupMessageHandler.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
